{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "resolveJsonModule": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "./__tests__/**/*.ts",
    "./src/**/*.*",
    "./exported-components/**/*.*",
    "./pages/**/*.*",
    "./methods/**/*.*"
  ],
  "files": [
    "./jest-yoshi.config.js",
    "./node_modules/yoshi/types.d.ts",
    "./node_modules/yoshi-flow-bm/types.d.ts",
    "./node_modules/jest-yoshi-preset/types.d.ts",
    "./dev/server.ts"
  ]
}
